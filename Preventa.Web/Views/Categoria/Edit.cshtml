@model Preventa.Modelos.Sistema.Tablas.Catalogo.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(d=> d.Descripcion)</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewData["mensaje"] != null)
{
    <div class="form-outline">
        <div class="alert alert-danger" role="alert"> @ViewData["mensaje"]</div>
    </div>
    <br />

}

<div>
    <a asp-action="Index">Atrás</a>
</div>

